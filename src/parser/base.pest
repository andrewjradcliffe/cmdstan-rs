}
jacobian     = ${
    !(("jacobian" ~ ((" ")+ ~ "jacobian" ~ (&(" ") | EOI))+))
    ~ ("jacobian" ~ ("=" ~ (false | true))?)
}
file       = ${
    !(("file" ~ ((" ")+ ~ "file" ~ (&(" ") | EOI))+))
    ~ ("file" ~ ("=" ~ path)?)
}
